<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_tlo"
    tools:context="com.example.pawe.pracaidemo2.Logowanie">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="420dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_logo_1"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="19dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Podaj login"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logowanie_login"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/przycisk"
            android:layout_gravity="center_vertical|center_horizontal"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/menu_text" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Podaj hasło"
            android:textAlignment="center"
            android:textColor="@color/menu_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/logowanie_haslo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:backgroundTint="@color/przycisk"
            android:ems="10"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/menu_text" />

        <Button
            android:theme="@style/AppTheme.Button"
            android:id="@+id/logowanie_zaloguj"
            android:drawableLeft="@drawable/ic_logowanie"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="Zaloguj się"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"/>

        <TextView
            android:id="@+id/logowanie_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Nie możesz się zalogować?"
            android:textAlignment="center"
            android:textColor="@color/menu_text" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
