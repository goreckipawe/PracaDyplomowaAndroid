<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_tlo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawe.pracaidemo2.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064"
            app:srcCompat="@drawable/ic_logo_1"
            android:layout_weight="0.28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_weight="0.28"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/wiadomosci"
                android:layout_width="100dp"
                android:layout_height="81dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_wiadomosci"
                android:onClick="wiadomosci"
                app:layout_constraintBottom_toTopOf="@+id/zasoby"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/dokumenty"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/dokumenty"
                android:layout_width="98dp"
                android:layout_height="81dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_dokumenty"
                android:onClick="dokumenty"
                app:layout_constraintBottom_toTopOf="@+id/wiadomowsc"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.69" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_marginRight="47dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.50"
                android:text="Poczta"
                android:textAlignment="center"
                android:textColor="@color/menu_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.837"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.83" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_weight="0.23"
                android:layout_marginRight="57dp"
                android:text="Dokumenty"
                android:textAlignment="center"
                android:textColor="@color/menu_text"
                app:layout_constraintBottom_toTopOf="@+id/wiadomowsc"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dokumenty"
                app:layout_constraintVertical_bias="0.642" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_weight="0.05">

            <ImageButton
                android:id="@+id/zasoby"
                android:layout_width="92dp"
                android:layout_height="81dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/ic_zasoby"
                android:onClick="zasoby"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.773" />

            <ImageButton
                android:id="@+id/wiadomowsc"
                android:layout_width="88dp"
                android:layout_height="81dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_wiadomosc_wysylanie"
                android:onClick="wiadomosc_wysylanie"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.00999999" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="114dp"
                android:layout_height="17dp"
                android:layout_weight="0.04"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="14dp"
                android:text="Zasoby"
                android:textAlignment="center"
                android:textColor="@color/menu_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.84000003" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="87dp"
                android:layout_height="17dp"
                android:layout_marginRight="67dp"
                android:text="Wiadomość"
                android:textAlignment="center"
                android:textColor="@color/menu_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.826"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.621" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
