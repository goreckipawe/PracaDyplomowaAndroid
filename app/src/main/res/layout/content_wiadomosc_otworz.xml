<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_tlo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawe.pracaidemo2.Wiadomosc_otworz"
    tools:showIn="@layout/app_bar_wiadomosc_otworz">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/wo_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/menu_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wo_identyfikator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/menu_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wo_data_godzina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/menu_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/wo_text"
            android:layout_width="match_parent"
            android:layout_height="348dp" />

        <Button
            android:id="@+id/usun_wiadomosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:text="Usuń wiadomość" />

        <Button
            android:id="@+id/pobierz_zalacznik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:text="Pobierz załącznik" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
