<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_tlo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawe.pracaidemo2.Wiadomosc_wysylanie"
    tools:showIn="@layout/app_bar_wiadomosc_wysylanie">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <Spinner
            android:id="@+id/dzial"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.04"
            android:background="@color/przycisk"
            android:popupBackground="@color/przycisk"
            android:theme="@style/Spinner" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Spinner
            android:id="@+id/pracownik"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="0.04"
            android:background="@color/przycisk"
            android:popupBackground="@color/przycisk"
            android:theme="@style/Spinner" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tytuł"
            android:paddingTop="10dp"
            android:textColor="@color/menu_text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tytul_wiadomosc_wysylanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_text"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/tresc_wiadomosc_wysylanej"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_text"
            android:layout_weight="0.78"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/wyslanie_wiadomosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:text="Wyślij" />

        <Button
            android:id="@+id/wyslanie_wiadomosc_dzial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:text="Wyślij do działu" />
        <Button
            android:id="@+id/wyslanie_wiadomosc_wszyscy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Button"
            android:text="Wyślij do wszystkich" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
