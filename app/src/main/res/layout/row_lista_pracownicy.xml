<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/menu_tlo"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pracownik_imie_nazwisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/menu_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pracownik_stanowisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/menu_text"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pracownik_identyfikator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/menu_text" />

        <CheckBox
            android:id="@+id/pracownik_box"
            android:buttonTint="@color/menu_text"
            android:textColor="@color/menu_text"
            android:layout_width="113dp"
            android:layout_height="53dp" />
    </LinearLayout>

    <Button
        android:id="@+id/dane_pracownika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Button"
        android:text="PokaÅ¼ dane" />
</LinearLayout>